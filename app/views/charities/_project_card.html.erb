<!-- _project_card.html.erb -->

<div class="project-card">
  <div class="project-photo">
    <% if project.photos.attached? %>
      <%= cl_image_tag project.photos.first.key, width: 300, height: 200, crop: 'fill' %>
    <% else %>
      <p>No image available for this project.</p>
    <% end %>
  </div>
  <div class="project-details">
    <h4><%= project.name %></h4>
    <p><strong>Location:</strong> <%= project.location %></p>
    <div class="progress-and-button row align-items-end">

      <div class="progress-info-and-bar col-md-8">
        <div class="progress-text d-flex align-items-center">
          <h4 class="mb-0">€22,480</h4>
          <p class="mb-0 ms-2">raised of €30,000 Goal</p>
        </div>
        <div class="progress">
          <div class="progress-bar" role="progressbar" style="width: 25%; background-color: #97FEED;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
    <div class="donate-button col-md-4 ms-auto">
      <button type="button" class="btn btn-primary">Donate</button>
    </div>

  </div>
  </div>
</div>
