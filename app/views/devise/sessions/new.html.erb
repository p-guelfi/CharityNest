<div class="login-page-container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-form-container">
      <h2 class="login-form-title">Log in</h2>

      <div class="login-form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "login-form-input" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "login-form-input" } %>
        <%= f.input :remember_me, as: :boolean, input_html: { class: "login-form-remember" } if devise_mapping.rememberable? %>
      </div>

      <div class="login-form-actions">
        <%= f.button :submit, "Log in", class: "login-form-submit-btn" %>
      </div>

      <div class="login-form-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
