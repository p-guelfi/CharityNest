<div class="login-page-container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="login-form-container">
      <h2 class="login-form-title">Sign up</h2>

      <%= f.error_notification %>

      <div class="login-form-inputs">
        <div class="login-form-row">
          <div class="login-form-input-container">
            <%= f.input :first_name,
                        required: true,
                        input_html: { class: "login-form-input" },
                        label_html: { class: "login-form-label" } %>
          </div>
          <div class="login-form-input-container">
            <%= f.input :last_name,
                        required: true,
                        input_html: { class: "login-form-input" },
                        label_html: { class: "login-form-label" } %>
          </div>
        </div>

        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "login-form-input" } %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "login-form-input" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "login-form-input" } %>
      </div>

      <div class="login-form-actions">
        <%= f.button :submit, "Sign up", class: "login-form-submit-btn" %>
      </div>

      <div class="login-form-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
