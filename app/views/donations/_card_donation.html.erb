<div class="donation-card">
  <h3><%= donation.charity_project.name %></h2>
  <% if donation.recurrent? %>
    <p>Monthly Donation: <%= humanized_money_with_symbol(donation.amount) %></p>
    <p>since
  <% else %>
    <p>You donated: <%= number_to_currency(donation.amount_cents / 100.0, precision: 0) %></p>
    <p>on
  <% end %>
    <%= donation.created_at.strftime("%b %d, %Y") %></p>
    <p>Status: <%= donation.state  %></p>

  <div class="donation-actions">
    <%= link_to 'Edit', donation_path(donation), method: :delete, data: { confirm: 'Are you sure you want to delete this donation?' }, class: 'button' %>
  </div>
</div>
