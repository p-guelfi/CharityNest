<% if current_user.donations.any? %>
  <%= render "top_dashboard" %>

  <div class="grid-dashboard">
    <div class="column-donations">
      <% @donations.each do |donation| %>
        <div class="card-ticker">
          <%= render "card_project_donation", donation: donation %>
        </div>
      <% end %>
    </div>

    <div class="column-news">
      <%# Render all Reports that belong to charity projects that belong to @donations %>

      <%# Render all discussions belonging to the donation %>
      <% @news.each do |news| %>
        <% if news.class == Report %>
          <div class="card-news">
            <%= render "reports/card_report_teaser", report: news %>
          </div>
        <% elsif news.class == Discussion %>
          <div class="card-news">
            <%= render "discussions/card_discussion", discussion: news %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="hero-section">
    <div class="hero-content">
      <p class="hero-description">No donations to show yet</p>
      <%= link_to 'Make your first donation', charity_projects_path, class: 'hero-button' %>
    </div>
  </div>
<% end %>
