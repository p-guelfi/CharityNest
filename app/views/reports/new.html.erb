  <%= simple_form_for [ @charity_project, @report ] do |f| %>
    <div class="form-inputs">
      <%= f.input :title %>
    </div>

    <div class="form-inputs">
      <%= f.input :teaser %>
    </div>

    <!-- insert these three line of code below -->
    <div class="form-inputs">
