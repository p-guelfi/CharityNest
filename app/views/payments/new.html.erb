<div class="container">
  <div class="row py-4">
    <div class="col-md-3 m-5">
      <% if @charity_project.photos.attached? %>
        <%= cl_image_tag @charity_project.photos.first.key, width: 300, height: 200, gravity: "center", crop: "fill" %>
      <% else %>
        <%= cl_image_tag 'placeholder_image.png', width: 300, height: 200, gravity: "center", crop: "fill" %> <!-- A placeholder if no image -->
      <% end %>
    </div>
    <div class="col">
      <h1>Checkout summary</h1>
      <p>Donation for <strong><%= @charity_project.name %></strong></p>
      <button id="pay" class="btn btn-primary">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @donation.checkout_session_id %>'
          });
        });
      </script>

    </div>
  </div>
</div>
