<div class="viewport-above-cta">
  <div class="dropshadow-nav"></div>
  <%# Banner with charity description %>
  <%# List %>
  <div class="grid-show-background show-container" data-controller="sort-index">
    <div class="show-nav-container">
      <%# Nav Bar Show Content %>
      <%= render "show_nav" %>
    </div>
    <%# Grid with Charity Cards %>
    <div class="show-content-container">
      <section id="intro">
        <div class="grid-show-container">
          <div class="show-heading">
            <h1><%= @charity_project.name %></h1>
            <h6><%= @charity_project.description %></h6>
          </div>
          <div class="show-intro">
            <%= render "show_card_photos" %>
          </div>
        </div>
      </section>
      <section id="approach">
        <div class="grid-show-container">
          <div class="section-title">
            <h2>Project Approach</h2>
          </div>
          <%= render "show_section_description" %>
        </div>
      </section>
      <section id="data">
        <div class="grid-show-container">
          <div class="section-title">
            <h2>External Evaluation</h2>
          </div>
          <%= render "show_card_graphs" %>
          <div class="container-evaluations">
              <%= render "reports_carousel", carousel_id: "evaluations", objects: @charity_project.evaluations %>
          </div>
        </div>
      </section>
      <section id="reporting">
        <div class="grid-show-container">
          <div class="section-title">
            <h2>Organisation Reporting</h2>
          </div>
          <%# Iterate over articles %>
          <div class="container-articles">
            <%= render "reports_carousel", carousel_id: "articles", objects: @charity_project.articles %>
          </div>
        </div>
      </section>
      <% if @charity_project.discussions.any? %>
        <section id="forum">
          <div class="grid-show-container">
            <div class="section-title">
              <h2>Forum</h2>
            </div>
            <%= render "show_card_map" %>
            <div class="container-articles">
              <%= render "discussions_carousel", carousel_id: "Discussions", objects: @charity_project.discussions.first(3)  %>
            </div>
          </div>
        </section>
      <% end %>
    </div>
  </div>
</div>
<%= render "show_cta_donation", project: @charity_project %>
