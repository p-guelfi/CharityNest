<% content_for :chatbox_button_class, 'btn-primary' %> <!-- Custom class for homepage -->
<% content_for :chatbox_button_text, 'Ask CharityNest AI Assistant' %> <!-- Custom text for homepage -->
<% content_for :chatbox_button_id, 'chatbox-toggle-button-two' %> <!-- Custom ID for homepage -->
<div class="hero-section">
  <div class="hero-content">
    <h1 class="hero-title">Support Change, Empower Communities</h1>
    <p class="hero-description">Make an impact with your support</p>
    <button class="hero-button" onclick="window.location.href='#categories'">Get Started Today</button>
  </div>
</div>

<section class="usp-section">
  <h2 class="usp-title">A Smarter Way to Make an Impact</h2>
  <div class="usp-cards">
    <% # Create the USP cards dynamically if data is present, or statically for now %>
    <div class="usp-card">
      <%= image_tag 'icons/star.svg', class: 'usp-icon' %>
      <h3 class="usp-title">Curated Charities</h3>
      <p class="usp-description">Every cause is carefully vetted for credibility and impact.</p>
    </div>
    <div class="usp-card">
      <%= image_tag 'icons/search.svg', class: 'usp-icon' %>
      <h3 class="usp-title">Transparent Tracking</h3>
      <p class="usp-description">See exactly how your contributions make a difference.</p>
    </div>
    <div class="usp-card">
      <%= image_tag 'icons/handshake.svg', class: 'usp-icon' %>
      <h3 class="usp-title">Community Engagement</h3>
      <p class="usp-description">Collaborate and connect with like-minded changemakers.</p>
    </div>
  </div>
</section>

<section class="categories" id="categories">
  <h2>Categories</h2>
  <div class="category-cards">
    <% @categories.each do |category| %>
      <%= link_to category_charities_path(category), class: 'no-underline-link' do %>
        <%= render 'shared/category_card', title: category.name %>
      <% end %>
    <% end %>
  </div>
</section>


<%= render 'shared/footer' %> <!-- Render the footer section -->
